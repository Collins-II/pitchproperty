{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    // "exactOptionalPropertyTypes": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/emails/*": [
        "./emails/*"
      ],
      "@/env": [
        "./env.mjs"
      ],
      "@/auth": [
        "./auth"
      ],
      "@/app": [
        "./app"
      ],
    }
  },
  "include": [
    "next-auth.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "server.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}
